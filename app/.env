# ========================
# JWT Configuration
# ========================
JWT_SECRET=YourSuperSecretKeyHere  # Must be 32+ chars for HS256
JWT_ALGO=HS256                    # Algorithm (HS256/RS256)
JWT_EXP_MINUTES=60                # Token expiration
JWT_ISSUER=social-media-api       # Token issuer
JWT_REQUIRED_CLAIMS=exp,iat,sub,iss  # Required claims

# ========================
# Password Configuration
# ========================
PASSWORD_MIN_LEN=8
PASSWORD_MAX_LEN=100
BCRYPT_ROUNDS=12                  # 12 is NIST-recommended

# ========================
# User Profile Configuration
# ========================
USERNAME_MIN_LEN=3
USERNAME_MAX_LEN=30
BIO_MAX_LENGTH=280
DISPLAY_NAME_MAX_LENGTH=50

# ========================
# Elasticsearch Configuration
# ========================
ES_USER_INDEX=users
ES_DEFAULT_ROLE=user
ES_URL=http://localhost:9200

# ========================
# Pagination Configuration
# ========================
PAGINATION_DEFAULT_PAGE=1
PAGINATION_MIN_SIZE=1
PAGINATION_DEFAULT_SIZE=20
PAGINATION_MAX_SIZE=100

# ========================
# Server Configuration
# ========================
PORT=8000
DEBUG=true
CORS_ALLOWED_ORIGINS=*